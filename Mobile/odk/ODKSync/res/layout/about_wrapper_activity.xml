<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:name="org.opendatakit.sync.fragments.BackgroundTaskFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="background"
        android:visibility="gone" />
    
    <fragment
        android:tag="foreground"
        android:name="org.opendatakit.sync.fragments.AboutMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
    
</FrameLayout>
