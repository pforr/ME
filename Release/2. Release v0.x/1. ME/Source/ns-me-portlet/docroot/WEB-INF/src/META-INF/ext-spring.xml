<?xml version="1.0"?>

<beans default-destroy-method="destroy" default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="dmDataSource"
		class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy">
		<property name="targetDataSource">
			<bean class="com.liferay.portal.dao.jdbc.util.DataSourceFactoryBean">
				<property name="propertyPrefix" value="jdbc.danhmuc." />
			</bean>
		</property>
	</bean>

	<bean id="liferayHibernateSessionFactory"
		class="com.liferay.portal.spring.hibernate.PortletHibernateConfiguration">
		<property name="dataSource" ref="dmDataSource" />
	</bean>

	<bean id="liferaySessionFactory"
		class="com.liferay.portal.dao.orm.hibernate.PortletSessionFactoryImpl">
		<property name="dataSource" ref="dmDataSource" />
		<property name="sessionFactoryClassLoader" ref="portletClassLoader" />
		<property name="sessionFactoryImplementor" ref="liferayHibernateSessionFactory" />
	</bean>

	<bean id="liferayTransactionManager" class="com.liferay.portal.kernel.util.InfrastructureUtil"
		factory-method="getTransactionManager" />

	<bean id="messageListener.DauNoiNuocImportThread_listener"
		class="vn.dtt.sol.ns.daunoinuoc.thread.DauNoiNuocImportThreadImpl" />
	<bean id="destination.sol.ns.daunoinuoc.DauNoiNuocImportThread"
		class="com.liferay.portal.kernel.messaging.SerialDestination">
		<property name="name"
			value="destination/sol/ns/daunoinuoc/DauNoiNuocImportThread" />
	</bean>
	<bean id="messagingConfigurator"
		class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="destination/sol/ns/daunoinuoc/DauNoiNuocImportThread">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.DauNoiNuocImportThread_listener" />
					</list>
				</entry>
			</map>
		</property>
		<property name="destinations">
			<list>
				<ref bean="destination.sol.ns.daunoinuoc.DauNoiNuocImportThread" />
			</list>
		</property>
	</bean>

	<bean id="messageListener.HoGiaDinhImportThread_listener"
		class="vn.dtt.sol.ns.daunoinuoc.thread.HoGiaDinhImportThreadImpl" />
	<bean id="destination.sol.ns.daunoinuoc.HoGiaDinhImportThread"
		class="com.liferay.portal.kernel.messaging.SerialDestination">
		<property name="name"
			value="destination/sol/ns/daunoinuoc/HoGiaDinhImportThread" />
	</bean>
	<bean id="messagingConfigurator2"
		class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="destination/sol/ns/daunoinuoc/HoGiaDinhImportThread">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.HoGiaDinhImportThread_listener" />
					</list>
				</entry>
			</map>
		</property>
		<property name="destinations">
			<list>
				<ref bean="destination.sol.ns.daunoinuoc.HoGiaDinhImportThread" />
			</list>
		</property>
	</bean>
</beans>